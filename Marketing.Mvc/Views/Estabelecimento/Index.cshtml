@model Marketing.Domain.PagedResponse.PagedResponse<List<Marketing.Domain.Entidades.Estabelecimento>>

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Estabelecimentos</h6>
    </div>
    <div class="card-body">
        <div class="container-fluid mb-3">
            <div class = "row align-items-center">
                <div class="col-3">
                    <button class="btn btn-sm btn-primary" asp-action="Create">Novo Estabelecimento</button>
                </div>
                <div class="col-4 offset-5">
                    <h6 class="">Estabelecimentos cadastrados: @Model.TotalRecords</h6>
                </div>
            </div>
        </div>
        <div class="table-responsive">
            <table class="table table-sm table-bordered">
                <thead class="table-primary">
                    <tr>
                        <th>Cnpj</th>
                        <th>Razão Social</th>
                        <th>Rede</th>
                        <th>Cidade</th>
                        <th>Uf</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @{int linha = 1;}
                    @foreach (var item in Model.Dados) {
                        <tr class="@(linha % 2 == 0 ? "" : "")">
                            <td>
                                @Html.DisplayFor(modelItem => item.Cnpj)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.RazaoSocial)
                            </td>
                            <td>
                                @if (item.Rede != null) {
                                    @Html.DisplayFor(modelItem => item.Rede.Nome)
                                }
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Cidade)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Uf)
                            </td>
                            <td>
                                <button class="btn btn-sm btn-danger" asp-action="Edit" asp-route-id="@item.Cnpj">Alterar</button> |
                            </td>
                        </tr>
                        linha = linha + 1;
                    }
                </tbody>
            </table>
        </div>
        
        <div class="row">
            <div class="col col-12">
                <input class="btn btn-sm btn-primary" type="button" value="<<" @(Model.PageNumber == 1 ? "disabled" : "") onclick="location.href='@Url.Action("Index", "Estabelecimento", new { pageNumber = 1 })'" />|
                <input class="btn btn-sm btn-primary" type="button" value="<" @(Model.PageNumber == 1 ? "disabled" : "") onclick="location.href='@Url.Action("Index", "Estabelecimento", new { pageNumber = Model.PageNumber - 1 })'" />|
                <input class="btn btn-sm btn-primary" type="button" value=">" @(Model.PageNumber == Model.TotalPages ? "disabled" : "") onclick="location.href='@Url.Action("Index", "Estabelecimento", new { pageNumber = Model.PageNumber + 1 })'" />|
                <input class="btn btn-sm btn-primary" type="button" value=">>" @(Model.PageNumber == Model.TotalPages ? "disabled" : "") onclick="location.href='@Url.Action("Index", "Estabelecimento", new { pageNumber = Model.TotalPages })'" />|
            </div>
            <div class="col col-12">
                <h6>´Página: @Model.PageNumber de @Model.TotalPages" </h6>
            </div>
        </div>
    </div>
</div>


