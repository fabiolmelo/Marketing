@model Marketing.Domain.Entidades.Estabelecimento

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Contatos por Estabelecimento</h6>
    </div>
    <div class="card-body">
        <form class="form-horizontal" method="post">
            <div class="form-group row">
                <div class="col col-xs-3 col-sm-3 col-md-3">
                    @Html.LabelFor(model => model.Cnpj, htmlAttributes: new { @class = "control-label" })
                    @Html.EditorFor(model => model.Cnpj, new { htmlAttributes = new { @class = "form-control", @readonly="readonly" } })
                </div>
                
            </div>
            <div class="table-responsive">
                <table class="table table-sm table-bordered">
                    <thead class="table-primary">
                        <tr>
                            <th>Telefone</th>
                            <th>Nome</th>
                            <th>Email</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @{int linha = 1;}
                        @foreach (var item in Model.ContatoEstabelecimentos) {
                            <tr class="@(linha % 2 == 0 ? "" : "")">
                                <td>
                                    @Html.DisplayFor(modelItem => item.Contato.Telefone)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Contato.Nome)

                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Contato.Email)
                                </td>
                            </tr>
                            linha = linha + 1;
                        }
                    </tbody>
                </table>
            </div>
        </form>
        <div class="row p-5">
            <div>
                <a asp-action="Index">Retornar</a>
            </div>           
        </div>
    </div>
</div>
@if (@ViewData["Erro"] != null){
    <div class="col-12">
        <div class="card bg-danger text-white text-sm shadow">
            <div class="card-body text-sm mb-0 p-0">
                @ViewData["Erro"]
            </div>
        </div>
    </div>
}
@if (@ViewData["OK"] != null){
    <div class="col-12">
        <div class="card bg-success text-white shadow">
            <div class="card-body text-sm mb-0 p-0">
                @ViewData["OK"]
            </div>
        </div>
    </div>
}
